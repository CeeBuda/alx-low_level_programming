#include "main.h"
#include <stdio.h>

/**
 * rev_string - reverses a string
 *
 * @s: string to be reversed
 *
 * Return: void (no return value)
 */
int _strlen(char *s)
{
	int n;
	int len = 0;

	for (n = 0; s[n] != '\0'; n++)
	{
		len++;
	}
	return (len);
}

void rev_string(char *s)
{
	int i, len, mid;
	char temp;

	len = _strlen(s);
	mid = len / 2;

	for (i = 0; i < mid; i++)
	{
		temp = s[i];
		s[i] = s[len - i - 1];
		s[len - i - 1] = temp;
	}
}
