#include "main.h"

/**
 * print_diagonal - prints diagonal line on the terminal
 *
 * @n: number of times '\' should be printed
 *
 * Return: void (no return value)
 */
void print_diagonal(int n)
{
	int i,j;

	for (i = 1; i <= n; i++)
	{
		if (n <= 0)
		{
			_putchar('\n');
		}
		for (j = 0; j < i; j++)
		{
			_putchar(' ');
		}
		_putchar('\\');
	}
}
